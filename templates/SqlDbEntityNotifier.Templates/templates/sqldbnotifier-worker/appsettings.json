{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=app.db"
  },
  "SqlDbEntityNotifier": {
    "Adapters": {
      "Sqlite": {
        "FilePath": "app.db",
        "ChangeTable": "change_log",
        "PollIntervalMs": 500,
        "MaxBatchSize": 100,
        "IncludeBefore": true,
        "IncludeAfter": true,
        "Source": "app-sqlite",
        "AutoCreateChangeLog": true
      }
    },
    "Publishers": {
      "Webhook": {
        "EndpointUrl": "http://localhost:8080/webhook",
        "HttpMethod": "POST",
        "TimeoutSeconds": 30,
        "RequireHttps": false,
        "DefaultHeaders": {
          "X-Source": "sqldb-notifier",
          "User-Agent": "SQLDBEntityNotifier/1.0"
        },
        "Retry": {
          "Enabled": true,
          "MaxRetries": 3,
          "BackoffSeconds": 2
        },
        "Hmac": {
          "Enabled": false,
          "SigningKey": "",
          "SignatureHeader": "X-Signature"
        },
        "OAuth": {
          "Enabled": false,
          "TokenEndpoint": "",
          "ClientId": "",
          "ClientSecret": "",
          "Scope": ""
        }
      }
    },
    "Defaults": {
      "Serializer": "json",
      "Batching": {
        "MaxItems": 100,
        "FlushIntervalMs": 500
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}